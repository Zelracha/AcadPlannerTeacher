<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TeachersUpdate"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/back_button2"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="start"
            android:layout_marginStart="5dp"
            android:layout_marginTop="7dp"
            android:background="@drawable/arrow_back"
            android:contentDescription="@string/add_button_description"
            tools:ignore="TouchTargetSizeCheck" />

        <Button
            android:id="@+id/update_button"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_gravity="end"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:background="@drawable/design_button"
            android:fontFamily="@font/dm_sans_bold"
            android:text="UPDATE"
            android:textColor="#FFFFFF"
            android:textSize="15sp"
            android:textStyle="bold"
            tools:ignore="TouchTargetSizeCheck,TextSizeCheck" />

    </FrameLayout>

    <ImageView
        android:id="@+id/updatepic"
        android:layout_width="match_parent"
        android:layout_height="297dp"
        android:src="@drawable/camera"
        android:background="#E2E9FD"
        android:scaleType="center"
        android:layout_marginTop="5dp"/>

    <EditText
        android:id="@+id/name_input2"
        android:layout_width="375dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="35dp"
        android:layout_marginTop="10dp"
        android:drawableLeft="@drawable/name"
        android:drawablePadding="20dp"
        android:background="@drawable/no_line_password"
        android:fontFamily="@font/dm_sans"
        android:hint="Name"
        android:textSize="15sp"
        android:inputType="textPersonName"
        android:padding="12.5dp"
        android:textColor="#1D294F" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="15dp"
        android:background="#DDDDDD" />

    <EditText
        android:id="@+id/surname_input2"
        android:layout_width="332dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="59dp"
        android:layout_marginEnd="35dp"
        android:background="@drawable/no_line_password"
        android:drawablePadding="20dp"
        android:fontFamily="@font/dm_sans"
        android:hint="Surname"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        android:padding="12.5dp"
        android:textColor="#1D294F"
        android:textSize="15sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="15dp"
        android:background="#DDDDDD" />

    <EditText
        android:id="@+id/phone_input2"
        android:layout_width="375dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="35dp"
        android:drawableLeft="@drawable/phone"
        android:drawablePadding="20dp"
        android:background="@drawable/no_line_password"
        android:fontFamily="@font/dm_sans"
        android:hint="Phone"
        android:textSize="15sp"
        android:inputType="phone"
        android:padding="12.5dp"
        android:textColor="#1D294F" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="15dp"
        android:background="#DDDDDD" />

    <EditText
        android:id="@+id/email_input2"
        android:layout_width="375dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="35dp"
        android:background="@drawable/no_line_password"
        android:drawableLeft="@drawable/email"
        android:drawablePadding="20dp"
        android:fontFamily="@font/dm_sans"
        android:hint="Mail"
        android:inputType="textEmailAddress"
        android:padding="12.5dp"
        android:textColor="#1D294F"
        android:textSize="15sp"
        tools:ignore="TextSizeCheck" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="15dp"
        android:background="#DDDDDD" />

    <Button
        android:id="@+id/delete_button"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="5dp"
        android:background="@drawable/delete_button"
        android:fontFamily="@font/dm_sans_bold"
        android:text="DELETE"
        android:textColor="#FFFFFF"
        android:textSize="15sp"
        android:textStyle="bold"
        tools:ignore="TouchTargetSizeCheck,TextSizeCheck" />
</LinearLayout>