<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <Button
            android:id="@+id/timetable_back_button"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="start"
            android:layout_marginStart="5dp"
            android:layout_marginTop="7dp"
            android:background="@drawable/arrow_back"
            tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />

        <Button
            android:id="@+id/timetable_save_button"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_gravity="end"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:background="@drawable/design_button"
            android:fontFamily="@font/dm_sans_bold"
            android:text="Save"
            android:textColor="#FFFFFF"
            android:textSize="14dp"
            android:textStyle="bold"
            tools:ignore="TouchTargetSizeCheck,TextSizeCheck" />
    </FrameLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="5dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="20dp">

        <TextView
            android:id="@+id/subject_picker"
            android:layout_width="370dp"
            android:layout_height="70dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="15dp"
            android:gravity="start|center"
            android:background="@drawable/no_line_password"
            android:drawablePadding="10dp"
            android:drawableEnd="@drawable/next_week"
            android:fontFamily="@font/dm_sans"
            android:hint="Subject"
            android:padding="12.5dp"
            android:textColor="#000"
            android:textSize="15sp"
            tools:ignore="TextSizeCheck" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/color_picker_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="5dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="5dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/color_picker"
            android:layout_width="370dp"
            android:layout_height="50dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="15dp"
            android:background="@drawable/no_line_password"
            android:drawablePadding="10dp"
            android:drawableEnd="@drawable/circle"
            android:fontFamily="@font/dm_sans"
            android:hint="Color"
            android:padding="12.5dp"
            android:textColor="#000"
            android:textSize="15sp"
            tools:ignore="TextSizeCheck" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="5dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="30dp">

        <TextView
            android:id="@+id/day_text"
            android:layout_width="207dp"
            android:layout_height="70dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="15dp"
            android:gravity="start|center"
            android:fontFamily="@font/dm_sans"
            android:hint="Day"
            android:padding="12.5dp"
            android:textColor="#000"
            android:textSize="15sp"
            tools:ignore="TextSizeCheck" />

        <Button
            android:id="@+id/day_picker"
            android:layout_width="135dp"
            android:layout_height="45dp"
            android:layout_gravity="center|end"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="15dp"
            android:fontFamily="@font/dm_sans_bold"
            android:hint="Day"
            android:padding="12.5dp"
            android:textColor="#353535"
            android:textSize="15sp"
            tools:ignore="TextSizeCheck,TouchTargetSizeCheck" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="5dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="5dp">

        <TextView
            android:id="@+id/time_text"
            android:layout_width="370dp"
            android:layout_height="70dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="15dp"
            android:gravity="start|center"
            android:fontFamily="@font/dm_sans"
            android:hint="Time"
            android:padding="12.5dp"
            android:textColor="#000"
            android:textSize="15sp"
            tools:ignore="TextSizeCheck" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="120dp"
            android:layout_gravity="center|end"
            android:background="@drawable/next_week"
            android:drawablePadding="10dp"
            android:fontFamily="@font/dm_sans"
            android:hint="Subject"
            android:padding="12.5dp"
            android:textColor="#000"
            android:textSize="15sp"
            tools:ignore="TextSizeCheck" />

        <Button
            android:id="@+id/from_time_picker"
            android:layout_width="100dp"
            android:layout_height="45dp"
            android:layout_gravity="center|end"
            android:layout_marginEnd="150dp"
            android:fontFamily="@font/dm_sans_bold"
            android:hint="From"
            android:padding="12.5dp"
            android:textColor="#353535"
            android:textSize="15sp"
            tools:ignore="TextSizeCheck,TouchTargetSizeCheck" />

        <Button
            android:id="@+id/to_time_picker"
            android:layout_width="100dp"
            android:layout_height="45dp"
            android:layout_gravity="center|end"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="15dp"
            android:fontFamily="@font/dm_sans_bold"
            android:hint="To"
            android:padding="12.5dp"
            android:textColor="#353535"
            android:textSize="15sp"
            tools:ignore="TextSizeCheck,TouchTargetSizeCheck" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="5dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="30dp">

        <TextView
            android:id="@+id/teacher_picker"
            android:layout_width="370dp"
            android:layout_height="70dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="15dp"
            android:gravity="start|center"
            android:background="@drawable/no_line_password"
            android:drawablePadding="10dp"
            android:drawableEnd="@drawable/next_week"
            android:fontFamily="@font/dm_sans"
            android:hint="Teacher"
            android:padding="12.5dp"
            android:textColor="#000"
            android:textSize="15sp"
            tools:ignore="TextSizeCheck" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        app:cardCornerRadius="5dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="30dp">

            <EditText
                android:id="@+id/timetable_note"
                android:layout_width="370dp"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="15dp"
                android:gravity="start|top"
                android:background="@drawable/no_line_password"
                android:drawablePadding="10dp"
                android:fontFamily="@font/dm_sans"
                android:hint="Note"
                android:inputType="textMultiLine"
                android:maxLines="5"
                android:padding="12.5dp"
                android:textColor="#000"
                android:textSize="15sp"
                android:maxLength="100"
                tools:ignore="TextSizeCheck" />
    </androidx.cardview.widget.CardView>
</LinearLayout>