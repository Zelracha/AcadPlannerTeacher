<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.overview.OverviewFragment"
    android:id="@+id/overview_container">

    <HorizontalScrollView
        android:id="@+id/horizontalScrollView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnAgenda"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_margin="5dp"
                android:background="@drawable/round_button"
                android:drawableLeft="@drawable/agenda"
                android:drawablePadding="10dp"
                android:padding="10dp"
                android:text="Agenda"
                android:textSize="14sp"
                android:textColor="#FFFFFF"
                tools:ignore="TouchTargetSizeCheck"
                android:fontFamily="@font/dm_sans_bold"
                android:textAllCaps="false"/>

            <Button
                android:id="@+id/btnCalendar"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_margin="5dp"
                android:background="@drawable/round_button"
                android:drawableLeft="@drawable/calendar"
                android:drawablePadding="10dp"
                android:padding="10dp"
                android:textSize="14sp"
                android:text="Calendar"
                android:textColor="#FFFFFF"
                tools:ignore="TouchTargetSizeCheck"
                android:fontFamily="@font/dm_sans_bold"
                android:textAllCaps="false"/>

            <Button
                android:id="@+id/btnTimetable"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_margin="5dp"
                android:textSize="14sp"
                android:background="@drawable/round_button"
                android:drawableLeft="@drawable/timetable"
                android:drawablePadding="10dp"
                android:padding="10dp"
                android:text="Timetable"
                android:textColor="#FFFFFF"
                tools:ignore="TouchTargetSizeCheck"
                android:fontFamily="@font/dm_sans_bold"
                android:textAllCaps="false"/>

            <Button
                android:id="@+id/btnSubjects"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_margin="5dp"
                android:background="@drawable/round_button"
                android:drawableLeft="@drawable/subjects"
                android:drawablePadding="10dp"
                android:padding="10dp"
                android:text="Subjects"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                tools:ignore="TouchTargetSizeCheck"
                android:fontFamily="@font/dm_sans_bold"
                android:textAllCaps="false"/>

            <Button
                android:id="@+id/btnTeachers"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_margin="5dp"
                android:background="@drawable/round_button"
                android:drawableLeft="@drawable/teachers"
                android:drawablePadding="10dp"
                android:padding="10dp"
                android:text="Teachers"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                tools:ignore="TouchTargetSizeCheck"
                android:fontFamily="@font/dm_sans_bold"
                android:textAllCaps="false"/>

        </LinearLayout>
    </HorizontalScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
