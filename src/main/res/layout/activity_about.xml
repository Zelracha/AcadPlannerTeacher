                    android:layout_marginTop="1dp"
                    android:layout_marginEnd="35dp"
                    android:fontFamily="@font/dm_sans"
                    android:justificationMode="inter_word"
                    android:text="- Study Planner: Plan your study sessions effectively, allocate time for each subject, and optimize your study routine for better results."
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/description5"
                    android:layout_width="294dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginEnd="35dp"
                    android:justificationMode="inter_word"
                    android:text="- Personalized Timetables: Create and customize your class schedules, extracurricular activities, and personal events with ease."
                    android:textSize="17sp"
                    android:fontFamily="@font/dm_sans" />

                <TextView
                    android:id="@+id/description6"
                    android:layout_width="294dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginEnd="35dp"
                    android:justificationMode="inter_word"
                    android:text="- Calendar View: Visualize your entire schedule in a comprehensive calendar, making it easy to see whatâ€™s coming up at a glance."
                    android:textSize="17sp"
                    android:fontFamily="@font/dm_sans" />

                <TextView
                    android:id="@+id/description7"
                    android:layout_width="294dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="35dp"
                    android:fontFamily="@font/dm_sans"
                    android:justificationMode="inter_word"
                    android:text="- Customizable Reminders: Set personalized reminders for important tasks, classes, and exams to stay on top of your schedule."
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/description8"
                    android:layout_width="294dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="35dp"
                    android:text="- Priority Categorization: Organize your tasks and assignments by priority to manage your workload efficiently."
                    android:textSize="17sp"
                    android:fontFamily="@font/dm_sans" />

                <TextView
                    android:id="@+id/description9"
                    android:layout_width="294dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="35dp"
                    android:justificationMode="inter_word"
                    android:text="- Data Storage: Store important information such as your subjects and basic details about your professors, helping you keep all your academic data organized."
                    android:textSize="17sp"
                    android:fontFamily="@font/dm_sans" />

            </LinearLayout>
   </androidx.cardview.widget.CardView>


        <TextView
            android:id="@+id/credits"
            android:layout_width="wrap_content"
            android:layout_marginStart="13dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="35dp"
            android:textColor="@color/blue1"
            android:layout_height="wrap_content"
            android:fontFamily="@font/dm_sans_bold"
            android:text="Developers"
            android:textSize="27sp" />

   <androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        card_view:cardCornerRadius="8dp"
        card_view:cardElevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
